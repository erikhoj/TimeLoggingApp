<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TimeLoggingApp"
             x:Class="TimeLoggingApp.MainPage">
	<ContentPage.Content>
		<StackLayout>
			<Label FontSize="Large"
				   HorizontalOptions="Center"
				   x:Name="CurrentActionLabel">Current Action</Label>
			<ScrollView HeightRequest="250" BackgroundColor="Azure">
				<Label x:Name="Log">
					TestLog
				</Label>
			</ScrollView>
			<ScrollView VerticalOptions="FillAndExpand">
				<StackLayout x:Name="ButtonStack">
					<Button HorizontalOptions="FillAndExpand" Text="Stop Current Action"
							x:Name="StopButton"></Button>
				</StackLayout>s
			</ScrollView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>