<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeLoggingApp.ActionEditPage">
    <ContentPage.Content>
        <StackLayout>
			<Label Text="All Actions" 
				   FontSize="Large"/>
			<ScrollView VerticalOptions="FillAndExpand">
				<StackLayout>
					<Frame Margin="2">
						<StackLayout Orientation="Horizontal">
							<Label Text="Action name"/>
							<Button Text="Edit"/>
							<Button Text="Delete"/>
						</StackLayout>
					</Frame>
					<Button x:Name="AddButton" Text="add new action"/>
				</StackLayout>
			</ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>