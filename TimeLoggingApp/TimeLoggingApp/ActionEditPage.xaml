<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeLoggingApp.ActionEditPage">
    <ContentPage.Content>
        <StackLayout>
			<Label Text="All Actions" 
				   FontSize="Large"/>
			<ScrollView VerticalOptions="FillAndExpand">
				<StackLayout x:Name="ActionContainer">
					<Frame Margin="2">
						<StackLayout Orientation="Horizontal">
							<Label Text="Action name"
								   HorizontalOptions="FillAndExpand"
								   VerticalOptions="Center"/>
							<Button Image="pencil32.png"
									
									WidthRequest="50"
									HeightRequest="50"
									HorizontalOptions="End"/>
							<Button Image="block32"
									WidthRequest="50"
							        HeightRequest="50"
									HorizontalOptions="End"/>
						</StackLayout>
					</Frame>
					<Button x:Name="AddButton" Text="add new action"/>
				</StackLayout>
			</ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>